 Date:    July 2013
 Purpose: Demo Program based on Inteview Exercise*@

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My Web Contacts</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="/Scripts/jquery-2.0.3.min.js" type="text/javascript"></script>    
     
        <script src="/Scripts/jquery-ui-1.10.3.custom.min.js" type="text/javascript"></script>    
        <script src="/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>    
        <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>    
        <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>    
        <script src="/Scripts/MvcCol/MvcCol.Dialogs.js" type="text/javascript"></script> 
         <script src="/Scripts/JQueryExercise/Scripts/Other/DemoBase.js" type="text/javascript"></script> 
        <script src="/Scripts/jquery-migrate-1.1.1.min.js" type="text/javascript"></script> 

        <link href="~/Content/themes/custom/jquery.ui.all.css" rel="stylesheet" />

        <meta name="viewport" content="width=device-width" />
        

        @Styles.Render("~/Content/css")
  
        
        <style type="text/css">
            body{ display:block; width:98%;  background-color: white;
                font-size:10pt;  font-family:arial,verdana,helvetica,sans-serif;
                 padding-left: 0.25em;padding-bottom: 0.25em;padding-right: 0.25em;padding-top: 0.0em;margin-top: 0.0em; }
            *.heading{ font-size:20pt; color:#00008b;text-align: center; background-color: #4b6596;color: white;margin-top: 0.0em;padding-top:0.0em}
            *.leftcolumn {width:Auto;   float:left;  
                padding: 0px ;border: 2px solid black;border-radius: 4px; margin-left: 5px;margin-right: 5px;margin-bottom: 5px;margin-top:0px }
            *.middlecolumn { width:5%; min-width:10px; float:left;
                padding:5px; }
            *.rightcolumn { width:30%; min-width:150px; float:left; 
                 border: 2px solid black;border-radius: 4px; margin-left: 5px;margin-right: 5px;margin-bottom: 5px;margin-top:0px }
            *.innerleftcolumn {width:Auto;   float:left;
                padding: 0px;margin-left: 1px;margin-right: 1px;margin-bottom: 0px;margin-top:0px }
            *.innermiddlecolumn { width:250px; float:left;
                padding:0px; }
            *.innerrightcolumn { width:Auto; min-width:120px; float:right;vertical-align: top;padding: 0px;
                  margin-left: 1px;margin-right: 1px;margin-bottom: 0px;margin-top:0px }
            *.divider { clear:both; }
            *.row { width:100%; padding-top:5px; padding-bottom:5px; }
        </style>

    </head>
    <body style="background-color:white;">
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("MVC Colleagues", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                              <li>@Html.ActionLink("JQuery Demo", "JQueryDemo", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - William Bert Craytor</p>
                </div>
            </div>
        </footer>
     
        @RenderSection("scripts", required: false)
     
    </body>
</html>
